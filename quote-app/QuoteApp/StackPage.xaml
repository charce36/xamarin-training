<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Padding="20"
    BackgroundColor="#127ac7"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="QuoteApp.StackPage">
    <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
    <StackLayout
            Grid.Row="0"
            VerticalOptions="Center"
            Spacing="20">
        <Label Text="Welcome to Xamarin"
               TextColor="White" 
               HorizontalOptions="Center"
               FontSize="30" FontAttributes="Bold" />
        <Label Text="Cross Platform apps made easy"
               TextColor="White" FontSize="18" 
               HorizontalOptions="Center" />
    </StackLayout>
         <Button Grid.Row="1" Text="Login" 
                BackgroundColor="#1dabf0"
                TextColor="White"
                FontAttributes="Bold"></Button>

        <Button Grid.Row="2" Text="Register" 
                TextColor="White"
                BackgroundColor="#1dabf0" 
                FontAttributes="Bold"></Button> 
    </Grid>

</ContentPage>